@{
    ViewBag.Title = "Home Page";
}

<section class="section" ng-app="myDiv">
    <div class="container" ng-controller="repeat">
        <div class="columns is-multiline is-mobile" >
            <div class="column is-one-quarter" ng-repeat="course in courses">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4">@Html.ActionLink("{{course.nombre}}", "Details","Home")</p>
                            </div>
                        </div>

                        <div class="content">
                            {{course.rama}}
                            <br>
                            <p>{{course.duracion}}</p>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>

        <select class="form-control" ng-change="send()" ng-model="selected" ng-options="var for var in options"></select>
    </div>
    <div ng-controller="crtl">
        <input class="form-control" type="text" value="{{selected}}" />
    </div>
</section>
@section scripts {
    <script src="~/Scripts/Controller.js"></script>
    }